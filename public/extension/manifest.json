
{
  "manifest_version": 3,
  "name": "Actionit",
  "version": "1.0.0",
  "description": "Engineer's Command Center - Productivity assistant that runs in your browser",
  "permissions": ["sidePanel", "storage", "tabs", "activeTab"],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Open Actionit",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
